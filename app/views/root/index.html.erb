<meta charset="UTF-8">
<script
  src="https://code.jquery.com/jquery-3.4.1.min.js"
  integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
  crossorigin="anonymous"></script>
<%= javascript_include_tag "root.js" %>

<div class="container">
  <h1>whiteless.works</h1>
  <p>わいとれすわーくすは、楽しいを作るクリエイター集団です。</p>
</div>
<%- @works.each do |work| %>
  <div class="container">
    <p><h3><%= work.name %></h3></p>
    <%= simple_format(h(work.caption)) %>
    <%- work.images.each_with_index do |image, i| %>
      <p>
        <%- if image.link %>
          <a href="<%= image.link %>">
        <%- end %>
        <img src="<%= image.path %>" width="<%= i == 0 ? "400px" : "300px" %>" class="picture">
        <%- if image.link %>
          </a>
        <%- end %>
      </p>
    <%- end %>
  </div>
<%- end %>
<div class="container">
  whiteless.works official website / produced by yuinore
</div>
